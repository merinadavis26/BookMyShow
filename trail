<nav>
  <a routerLink="/">Home</a>
  <ng-container *ngIf="authService.isAuthenticated(); else guestLinks">
    <ng-container *ngIf="authService.getUserRole() === 'admin'; else userLinks">
      <a routerLink="/admin/movies">Manage Movies</a>
      <a routerLink="/admin/theatres">Manage Theatres</a>
      <a routerLink="/admin/shows">Manage Shows</a>
    </ng-container>
    <ng-template #userLinks>
      <a routerLink="/user/movies">Movies</a>
      <a routerLink="/user/history">Booking History</a>
    </ng-template>
    <a (click)="logout()">Logout</a>
  </ng-container>
  <ng-template #guestLinks>
    <a routerLink="/login">Login</a>
    <a routerLink="/register">Register</a>
  </ng-template>
</nav>


